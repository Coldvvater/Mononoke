Zhihu_remove_ads_53 = type=http-response, pattern=^https:\/\/api\.zhihu\.com\/(v4\/)?questions\/\d+\/(answers|feeds)\?, script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/main/Resource/Script/Zhihu/Zhihu_remove_ads.js, requires-body=true, max-size=3145728, timeout=30, argument=""recommend_queries":\{.+\}->"recommend_queries":{}"

Zhihu_remove_ads_54 = type=http-response, pattern=^https:\/\/www\.zhihu\.com\/api\/v4\/(articles|answers)\/\d+\/recommendations?, script-path=https://gitlab.com/lodepuly/vpn_tool/-/raw/main/Resource/Script/Zhihu/Zhihu_remove_ads.js, requires-body=true, max-size=3145728, timeout=30, argument=""recommend_queries":\{.+\}->"recommend_queries":{}"

