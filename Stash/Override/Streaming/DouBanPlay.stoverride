name: 豆瓣影视
desc: Web版豆瓣电影和电视剧添加便捷播放源按钮

http:
  mitm:
    - "m.douban.com"
  script:
    - match: ^https?:\/\/m\.douban\.com\/movie\/subject\/\d+\/
      name: DouBan
      type: response
      require-body: true
      timeout: 10
script-providers:
  DouBan:
    url: https://raw.githubusercontent.com/githubdulong/Script/master/Douban.js
    interval: 86400
